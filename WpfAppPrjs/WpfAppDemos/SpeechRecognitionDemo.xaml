<Window x:Class="WpfAppDemos.SpeechRecognitionDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemos"
        mc:Ignorable="d"
        Title="SpeechRecognitionDemo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="193*"/>
            <RowDefinition Height="139*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.RowSpan="3">
            <Label Content="Speech Recognition" Height="50" VerticalAlignment="Top" Width="257"/>
            <TextBox Name="txtData" TextWrapping="Wrap" Text="TextBox" Width="327" Margin="0,0,0,369"/>
            <Button Name="btnPlay" Content="Play" Width="208" RenderTransformOrigin="0.483,0.536" Margin="0,0,0,369" Click="btnPlay_Click"/>
        </StackPanel>
    </Grid>
</Window>
