        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="163*"/>
            <RowDefinition Height="156*"/>
        </Grid.RowDefinitions>
        <Button Content="Button1" HorizontalAlignment="Left" Height="57" Margin="106,57,0,0" VerticalAlignment="Top" Width="184" Grid.Row="1" FontSize="24"/>
        <Button Content="Button2" HorizontalAlignment="Left" Height="57" Margin="106,57,0,0" VerticalAlignment="Top" Width="184" Grid.Column="1" Grid.Row="1" FontSize="24" RenderTransformOrigin="0.495,0.737"/>
        <Button Content="Button3" HorizontalAlignment="Left" Height="57" Margin="106,51,0,0" VerticalAlignment="Top" Width="184" Grid.Column="1" Grid.Row="2" FontSize="24"/>
            <Button Content="Button4" HorizontalAlignment="Left" Height="57" Margin="106,51,0,0" VerticalAlignment="Top" Width="184" Grid.Row="2" FontSize="24"/>
        </Grid>
    </StackPanel>
</Window>
